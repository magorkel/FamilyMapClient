<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme"
        android:text="Family Map"/>
<!--    <LinearLayout-->
<!--        android:orientation="vertical"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

    <LinearLayout
        android:id="@+id/first_name"
        android:layout_below="@id/toolbar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/first_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/first_name_subtitle"
            android:text="FIRST NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"/>
    </LinearLayout>

    <View
        android:id="@+id/firstNameDivider"
        android:layout_below="@id/first_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <LinearLayout
        android:id="@+id/last_name"
        android:layout_below="@id/firstNameDivider"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/last_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/last_name_subtitle"
            android:text="LAST NAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"/>
    </LinearLayout>

    <View
        android:id="@+id/lastNameDivider"
        android:layout_below="@id/last_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <LinearLayout
        android:id="@+id/gender"
        android:layout_below="@id/lastNameDivider"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/gender_subtitle"
            android:text="GENDER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"/>
    </LinearLayout>

    <View
        android:id="@+id/genderNameDivider"
        android:layout_below="@id/gender"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <ExpandableListView
        android:id="@+id/life_events_and_family"
        android:layout_below="@id/genderNameDivider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

