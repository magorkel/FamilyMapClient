<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingsActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme"
        android:text="Family Map"/>

    <RelativeLayout
        android:id="@+id/life_story_lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/life_story_lines_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life Story Lines"/>
        <TextView
            android:id="@+id/life_story_lines_subtitle"
            android:layout_below="@id/life_story_lines_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW LIFE STORY LINES"/>

        <Switch
            android:id="@+id/life_story_switch"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/lifeStoryLinesDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <RelativeLayout
        android:id="@+id/family_tree_lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/family_tree_lines_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Family Tree Lines"/>
        <TextView
            android:id="@+id/family_tree_lines_subtitle"
            android:layout_below="@id/family_tree_lines_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW FAMILY TREE LINES"/>

        <Switch
            android:id="@+id/family_tree_lines_switch"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/familyTreeLinesDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <RelativeLayout
        android:id="@+id/spouse_lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/spouse_lines_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spouse Lines"/>
        <TextView
            android:id="@+id/spouse_lines_subtitle"
            android:layout_below="@id/spouse_lines_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW SPOUSE LINES"/>

        <Switch
            android:id="@+id/spouse_lines_switch"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/spouseLinesDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <RelativeLayout
        android:id="@+id/fathers_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fathers_side_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father's Side"/>
        <TextView
            android:id="@+id/fathers_side_subtitle"
            android:layout_below="@id/fathers_side_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTER BY FATHER'S SIDE OF FAMILY"/>

        <Switch
            android:id="@+id/fathers_side_switch"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/fathersSideDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <RelativeLayout
        android:id="@+id/mothers_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mothers_side_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother's Side"/>
        <TextView
            android:id="@+id/mothers_side_subtitle"
            android:layout_below="@id/mothers_side_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTER BY MOTHER'S SIDE OF FAMILY"/>

        <Switch
            android:id="@+id/mothers_side_switch"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/mothersSideDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <RelativeLayout
        android:id="@+id/male_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/male_events_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male Events"/>
        <TextView
            android:id="@+id/male_events_subtitle"
            android:layout_below="@id/male_events_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTER EVENTS BASED ON GENDER"/>

        <Switch
            android:id="@+id/male_events_switch"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/maleEventsSwitch"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <RelativeLayout
        android:id="@+id/female_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/female_events_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female Events"/>
        <TextView
            android:id="@+id/female_events_subtitle"
            android:layout_below="@id/female_events_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTER EVENTS BASED ON GENDER"/>

        <Switch
            android:id="@+id/female_events_switch"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/femaleEventsDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

    <RelativeLayout
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/logout_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"/>
        <TextView
            android:id="@+id/logout_subtitle"
            android:layout_below="@id/logout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETURN TO LOGIN SCREEN"/>
    </RelativeLayout>

    <View
        android:id="@+id/logoutDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

</LinearLayout>